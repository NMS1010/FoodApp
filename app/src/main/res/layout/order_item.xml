<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/white"
android:padding="@dimen/_5sdp"
android:orientation="vertical"
android:layout_marginTop="@dimen/_5sdp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/orderItemImgV_orderItem"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/banhtranton"
        android:background="@drawable/background_input"/>

    <TextView
        android:id="@+id/orderItemNameTv_orderItem"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="Bánh tráng trộn"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:text="Đơn giá"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/orderItemUnitPriceTv_orderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.000đ"
            android:textColor="#FF6600"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:text="Số lượng"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/orderItemQuantityTv_orderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#FF6600"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:text="Thành tiền"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/orderItemTotalPriceTv_orderItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15.000đ"
            android:textColor="#FF6600"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>
    <TextView
        android:id="@+id/orderItemStatusTv_orderItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/textline"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Đơn hàng đang giao"
        android:textColor="#00CC33"/>

    <Button
        android:id="@+id/detailBtn_orderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_180sdp"
        android:text="Xem chi tiết"/>
</LinearLayout>